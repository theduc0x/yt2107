<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_open_video_from_video_channel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_6sdp"
    android:paddingRight="@dimen/_6sdp"
    android:paddingTop="@dimen/_3sdp"
    android:paddingBottom="@dimen/_3sdp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:weightSum="10">

    <ImageView
        android:id="@+id/iv_thumbnail_video"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80sdp"
        android:layout_weight="4.5"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_youtube"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:layout_weight="5.5"
        android:layout_marginStart="@dimen/_3sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_video_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black"
            android:text="Nhạc Chill Học Bài - Những Bản Nhạc Baroque Giúp Tập Trung Học Tập - Nhạc Không Lời Thư Giãn #14"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view_count_video_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="16 N"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text=" views • "/>

            <TextView
                android:id="@+id/tv_time_diff_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:text="3 hour ago"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_select_option_video_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_more_vert_black_24"/>
</LinearLayout>